# ============================================
# n8n Environment Variables - Example Configuration
# Copy this file to .env and fill in your values
# ============================================

# ===================
# AUTHENTICATION
# ===================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password-here

# ===================
# HOST CONFIGURATION
# ===================
N8N_HOST=cv-sorting-n8n.cfapps.eu10.hana.ondemand.com
N8N_PORT=8080
N8N_PROTOCOL=https
WEBHOOK_URL=https://cv-sorting-n8n.cfapps.eu10.hana.ondemand.com

# ===================
# SECURITY
# ===================
# Generate a 32-character random string for encryption
N8N_ENCRYPTION_KEY=your-32-character-encryption-key

# ===================
# DATABASE (PostgreSQL)
# ===================
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=your-postgres-host.postgres.database.azure.com
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n_user
DB_POSTGRESDB_PASSWORD=your-postgres-password
DB_POSTGRESDB_SSL_ENABLED=true

# ===================
# EMAIL (IMAP) - For CV Capture Workflow
# ===================
# These are used in the n8n workflow, not environment variables
# Configure in n8n UI under Credentials
#
# IMAP Server: imap.office365.com (for Microsoft 365)
# IMAP Port: 993
# IMAP User: ik@yourcompany.com
# IMAP Password: your-email-password-or-app-password
# IMAP SSL: true

# ===================
# SMTP - For Sending Notifications
# ===================
# Configure in n8n UI under Credentials
#
# SMTP Server: smtp.office365.com
# SMTP Port: 587
# SMTP User: notifications@yourcompany.com
# SMTP Password: your-smtp-password
# SMTP SSL: true

# ===================
# CAP SERVICE - For API Calls
# ===================
# Configure as OAuth2 credential in n8n
#
# CAP_SERVICE_URL=https://cv-sorting-srv.cfapps.eu10.hana.ondemand.com
# CAP_CLIENT_ID=your-xsuaa-client-id
# CAP_CLIENT_SECRET=your-xsuaa-client-secret
# CAP_TOKEN_URL=https://your-subdomain.authentication.eu10.hana.ondemand.com/oauth/token

# ===================
# PYTHON ML SERVICE - For OCR and Embeddings
# ===================
# Configure as HTTP Request credential in n8n
#
# ML_SERVICE_URL=https://cv-sorting-ml.cfapps.eu10.hana.ondemand.com
# ML_SERVICE_API_KEY=your-ml-service-api-key (if using API key auth)

# ===================
# TIMEZONE
# ===================
GENERIC_TIMEZONE=Europe/Istanbul

# ===================
# LOGGING
# ===================
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# ===================
# EXECUTION SETTINGS
# ===================
EXECUTIONS_PROCESS=main
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# ===================
# FEATURE FLAGS
# ===================
N8N_METRICS=true
N8N_DIAGNOSTICS_ENABLED=false
N8N_USER_MANAGEMENT_DISABLED=false
