<mvc:View
    controllerName="cvmanagement.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">

    <Page
        id="mainPage"
        title="CV Management System"
        showNavButton="false">

        <headerContent>
            <SearchField
                id="globalSearch"
                placeholder="Search candidates and jobs..."
                width="350px"
                search=".onGlobalSearch"
                liveChange=".onGlobalSearchLiveChange"
                suggest=".onGlobalSearchSuggest" />
            <Button
                id="refreshButton"
                icon="sap-icon://refresh"
                tooltip="Refresh (Ctrl+R)"
                press=".onRefresh" />
        </headerContent>

        <content>
            <IconTabBar
                id="mainTabBar"
                select=".onTabSelect"
                class="sapUiResponsiveContentPadding">

                <items>
                    <!-- Upload Tab -->
                    <IconTabFilter
                        id="uploadTab"
                        icon="sap-icon://upload"
                        text="Upload CVs"
                        key="upload">
                    </IconTabFilter>

                    <!-- Candidates Tab -->
                    <IconTabFilter
                        id="candidatesTab"
                        icon="sap-icon://employee"
                        text="Candidates"
                        key="candidates">
                    </IconTabFilter>

                    <!-- Documents Tab -->
                    <IconTabFilter
                        id="documentsTab"
                        icon="sap-icon://document"
                        text="Documents"
                        key="documents">
                    </IconTabFilter>

                    <!-- Analytics Tab -->
                    <IconTabFilter
                        id="analyticsTab"
                        icon="sap-icon://business-objects-experience"
                        text="Analytics"
                        key="analytics">
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
