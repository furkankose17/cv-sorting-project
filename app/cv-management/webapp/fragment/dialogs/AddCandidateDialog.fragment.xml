<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">

    <Dialog
        id="addCandidateDialog"
        title="Add New Candidate"
        contentWidth="500px"
        afterClose=".onAfterCloseDialog">

        <content>
            <form:SimpleForm
                layout="ResponsiveGridLayout"
                editable="true"
                columnsL="1"
                columnsM="1">
                <form:content>
                    <!-- Basic Information -->
                    <core:Title text="Basic Information" />

                    <Label text="First Name" required="true" />
                    <Input
                        id="firstNameInput"
                        value="{dialogModel>/firstName}"
                        placeholder="Enter first name"
                        required="true" />

                    <Label text="Last Name" required="true" />
                    <Input
                        value="{dialogModel>/lastName}"
                        placeholder="Enter last name"
                        required="true" />

                    <Label text="Email" required="true" />
                    <Input
                        value="{dialogModel>/email}"
                        type="Email"
                        placeholder="candidate@example.com"
                        required="true" />

                    <Label text="Phone" />
                    <Input
                        value="{dialogModel>/phone}"
                        type="Tel"
                        placeholder="+1 234 567 8900" />

                    <!-- Status -->
                    <core:Title text="Status" class="sapUiTinyMarginTop" />

                    <Label text="Initial Status" required="true" />
                    <Select
                        selectedKey="{dialogModel>/statusCode}"
                        width="100%">
                        <items>
                            <core:Item key="new" text="New" />
                            <core:Item key="screening" text="Screening" />
                        </items>
                    </Select>

                    <!-- Experience -->
                    <core:Title text="Experience" class="sapUiTinyMarginTop" />

                    <Label text="Years of Experience" />
                    <StepInput
                        value="{dialogModel>/totalExperienceYears}"
                        min="0"
                        max="50"
                        step="1"
                        width="200px" />

                    <Label text="Notes" />
                    <TextArea
                        value="{dialogModel>/notes}"
                        rows="3"
                        width="100%"
                        placeholder="Optional notes about the candidate..." />
                </form:content>
            </form:SimpleForm>
        </content>

        <beginButton>
            <Button
                text="Add Candidate"
                type="Emphasized"
                press=".onConfirmAddCandidate" />
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press=".onCancelDialog" />
        </endButton>
    </Dialog>

</core:FragmentDefinition>
