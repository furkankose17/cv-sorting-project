<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">

    <Dialog
        id="updateStatusDialog"
        title="Update Candidate Status"
        contentWidth="400px">

        <content>
            <form:SimpleForm
                layout="ResponsiveGridLayout"
                editable="true">
                <form:content>
                    <Label text="Candidate" />
                    <Text text="{dialogModel>/candidateName}" />

                    <Label text="Current Status" />
                    <Text text="{dialogModel>/currentStatus}" />

                    <Label text="New Status" required="true" />
                    <Select
                        id="statusSelect"
                        selectedKey="{dialogModel>/newStatus}"
                        width="100%">
                        <items>
                            <core:Item key="new" text="New" />
                            <core:Item key="screening" text="Screening" />
                            <core:Item key="interviewing" text="Interviewing" />
                            <core:Item key="offered" text="Offered" />
                            <core:Item key="hired" text="Hired" />
                            <core:Item key="rejected" text="Rejected" />
                            <core:Item key="withdrawn" text="Withdrawn" />
                        </items>
                    </Select>

                    <Label text="Notes" />
                    <TextArea
                        value="{dialogModel>/notes}"
                        rows="4"
                        width="100%"
                        placeholder="Optional notes about this status change..." />

                    <Label text="Notify Candidate" />
                    <CheckBox
                        selected="{dialogModel>/notifyCandidate}"
                        text="Send email notification" />
                </form:content>
            </form:SimpleForm>
        </content>

        <beginButton>
            <Button
                text="Update"
                type="Emphasized"
                press=".onConfirmUpdateStatus" />
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press=".onCancelDialog" />
        </endButton>
    </Dialog>

</core:FragmentDefinition>
