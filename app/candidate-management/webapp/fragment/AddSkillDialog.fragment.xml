<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog
        id="addSkillDialog"
        title="{i18n>AddSkill}"
        type="Message"
        contentWidth="450px"
        busy="{dialog>/isLoading}"
        busyIndicatorDelay="0"
        ariaLabelledBy="addSkillTitle">
        <content>
            <VBox id="addSkillVBox" class="sapUiSmallMargin">
                <form:SimpleForm
                    id="addSkillForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                    class="sapUiSmallMarginTop">
                    <form:content>
                        <Label id="skillLabel" text="{i18n>Skill}" required="true" labelFor="skillSelect"/>
                        <Select
                            id="skillSelect"
                            selectedKey="{dialog>/selectedSkillId}"
                            items="{dialog>/Skills}"
                            forceSelection="false"
                            ariaLabelledBy="skillLabel">
                            <core:Item id="skillItem" key="{dialog>ID}" text="{dialog>name}"/>
                        </Select>
                        <Label id="proficiencyLabel" text="{i18n>Proficiency}" labelFor="proficiencySelect"/>
                        <Select
                            id="proficiencySelect"
                            selectedKey="{dialog>/proficiencyLevel}"
                            ariaLabelledBy="proficiencyLabel">
                            <core:Item id="beginnerItem" key="Beginner" text="{i18n>Beginner}"/>
                            <core:Item id="intermediateItem" key="Intermediate" text="{i18n>Intermediate}"/>
                            <core:Item id="advancedItem" key="Advanced" text="{i18n>Advanced}"/>
                            <core:Item id="expertItem" key="Expert" text="{i18n>Expert}"/>
                        </Select>
                        <Label id="yearsExpLabel" text="{i18n>YearsExperience}" labelFor="yearsExpInput"/>
                        <Input
                            id="yearsExpInput"
                            value="{dialog>/yearsOfExperience}"
                            type="Number"
                            placeholder="0"
                            ariaLabelledBy="yearsExpLabel"/>
                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                id="confirmAddSkillBtn"
                text="{i18n>dialogConfirm}"
                type="Emphasized"
                press=".onConfirmAddSkill"
                enabled="{= !${dialog>/isLoading} }"/>
        </beginButton>
        <endButton>
            <Button
                id="cancelAddSkillBtn"
                text="{i18n>dialogCancel}"
                press=".onCancelAddSkill"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
