<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="deleteConfirmDialog"
        title="{i18n>dialogDeleteTitle}"
        type="Message"
        state="Warning"
        contentWidth="400px"
        busy="{dialog>/isLoading}"
        busyIndicatorDelay="0"
        ariaLabelledBy="deleteMessageText">
        <content>
            <VBox id="deleteConfirmVBox" class="sapUiSmallMargin">
                <Text
                    id="deleteMessageText"
                    text="{dialog>/deleteMessage}"
                    class="sapUiSmallMarginBottom"/>
                <MessageStrip
                    id="deleteWarningStrip"
                    text="{i18n>dialogDeleteWarning}"
                    type="Warning"
                    showIcon="true"/>
            </VBox>
        </content>
        <beginButton>
            <Button
                id="confirmDeleteBtn"
                text="{i18n>dialogDelete}"
                type="Reject"
                press=".onConfirmDelete"
                enabled="{= !${dialog>/isLoading} }"/>
        </beginButton>
        <endButton>
            <Button
                id="cancelDeleteBtn"
                text="{i18n>dialogCancel}"
                press=".onCancelDelete"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
