<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:cards="sap.f.cards"
    xmlns:form="sap.ui.layout.form">

    <f:Card id="idExtractedDataCard" class="sapUiMediumMargin" visible="{= ${processingStatus} === 'completed'}">
        <f:header>
            <cards:Header
                id="idExtractedDataHeader"
                title="{i18n>extractedData}"
                subtitle="{i18n>reviewExtractedInfo}"
                iconSrc="sap-icon://syntax"/>
        </f:header>
        <f:content>
            <IconTabBar id="idExtractedDataIconTabBar" class="sapUiSmallMargin">
                <items>
                    <IconTabFilter id="idPersonalInfoIconTabFilter" text="{i18n>personalInfo}" icon="sap-icon://person-placeholder">
                        <form:SimpleForm
                            id="idPersonalInfoSimpleForm"
                            editable="false"
                            labelSpanXL="4"
                            columnsXL="2"
                            singleContainerFullSize="false">
                            <form:content>
                                <Label id="idFirstNameLabel" text="{i18n>firstName}"/>
                                <Text id="idFirstNameText" text="{extracted>/firstName}"/>
                                <Label id="idLastNameLabel" text="{i18n>lastName}"/>
                                <Text id="idLastNameText" text="{extracted>/lastName}"/>
                                <Label id="idEmailLabel" text="{i18n>email}"/>
                                <Text id="idEmailText" text="{extracted>/email}"/>
                                <Label id="idPhoneLabel" text="{i18n>phone}"/>
                                <Text id="idPhoneText" text="{extracted>/phone}"/>
                                <Label id="idLocationLabel" text="{i18n>location}"/>
                                <Text id="idLocationText" text="{extracted>/location}"/>
                                <Label id="idHeadlineLabel" text="{i18n>headline}"/>
                                <Text id="idHeadlineText" text="{extracted>/headline}"/>
                            </form:content>
                        </form:SimpleForm>
                    </IconTabFilter>

                    <IconTabFilter id="idWorkExperienceIconTabFilter" text="{i18n>workExperience}" icon="sap-icon://business-card">
                        <List id="idExperiencesList" items="{extracted>/experiences}" noDataText="{i18n>noExperience}">
                            <StandardListItem
                                id="idExperienceStandardListItem"
                                title="{extracted>jobTitle}"
                                description="{extracted>company}"
                                info="{extracted>duration}"/>
                        </List>
                    </IconTabFilter>

                    <IconTabFilter id="idEducationIconTabFilter" text="{i18n>education}" icon="sap-icon://education">
                        <List id="idEducationList" items="{extracted>/education}" noDataText="{i18n>noEducation}">
                            <StandardListItem
                                id="idEducationStandardListItem"
                                title="{extracted>degree}"
                                description="{extracted>institution}"
                                info="{extracted>year}"/>
                        </List>
                    </IconTabFilter>

                    <IconTabFilter id="idSkillsIconTabFilter" text="{i18n>skills}" icon="sap-icon://initiative">
                        <HBox id="idSkillsHBox" wrap="Wrap" class="sapUiSmallMargin">
                            <!-- Skills will be rendered as tokens dynamically -->
                        </HBox>
                    </IconTabFilter>

                    <IconTabFilter id="idRawTextIconTabFilter" text="{i18n>rawText}" icon="sap-icon://document-text">
                        <TextArea
                            id="idExtractedTextTextArea"
                            value="{extractedText}"
                            rows="20"
                            width="100%"
                            editable="false"
                            growing="true"/>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </f:content>
    </f:Card>

</core:FragmentDefinition>
