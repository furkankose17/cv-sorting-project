<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:cards="sap.f.cards">

    <f:Card id="idLinkedCandidateCard" class="sapUiMediumMargin" visible="{= !!${candidate_ID}}">
        <f:header>
            <cards:Header
                id="idLinkedCandidateHeader"
                title="{i18n>linkedCandidate}"
                subtitle="{candidate/firstName} {candidate/lastName}"
                iconSrc="sap-icon://employee"/>
        </f:header>
        <f:content>
            <HBox id="idCandidateContentHBox" class="sapUiSmallMargin" justifyContent="SpaceBetween" alignItems="Center">
                <VBox id="idCandidateInfoVBox">
                    <Text id="idCandidateNameText" text="{candidate/firstName} {candidate/lastName}"/>
                    <Text id="idCandidateEmailText" text="{candidate/email}" class="sapUiTinyMarginTop"/>
                </VBox>
                <Button
                    id="idViewCandidateButton"
                    text="{i18n>viewCandidate}"
                    press=".onViewCandidate"
                    type="Transparent"/>
            </HBox>
        </f:content>
    </f:Card>

</core:FragmentDefinition>
