<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
    controllerName="cv.sorting.cvupload.controller.DocumentDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page
        id="idDocumentDetailPage"
        title="{i18n>documentDetailPageTitle}"
        showNavButton="true"
        navButtonPress="onNavBack">

        <headerContent>
            <Button
                id="idReprocessButton"
                icon="sap-icon://synchronize"
                text="{i18n>reprocess}"
                press="onReprocessDocument"
                type="Transparent"
                visible="{= ${processingStatus} === 'failed'}"/>
            <Button
                id="idDownloadButton"
                icon="sap-icon://download"
                text="{i18n>downloadOriginal}"
                press="onDownloadDocument"
                type="Transparent"/>
            <Button
                id="idCreateCandidateButton"
                icon="sap-icon://add-employee"
                text="{i18n>createCandidate}"
                press="onCreateCandidate"
                type="Emphasized"
                visible="{= ${processingStatus} === 'completed' &amp;&amp; !${candidate_ID}}"/>
        </headerContent>

        <content>
            <!-- Document Info Card Fragment -->
            <core:Fragment
                id="idDocInfoFragment"
                fragmentName="cv.sorting.cvupload.fragment.DocumentInfoCard"
                type="XML"/>

            <!-- Extracted Data Panel Fragment -->
            <core:Fragment
                id="idExtractedDataFragment"
                fragmentName="cv.sorting.cvupload.fragment.ExtractedDataPanel"
                type="XML"/>

            <!-- Linked Candidate Card Fragment -->
            <core:Fragment
                id="idLinkedCandidateFragment"
                fragmentName="cv.sorting.cvupload.fragment.LinkedCandidateCard"
                type="XML"/>
        </content>
    </Page>
</mvc:View>
